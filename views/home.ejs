.btn {
    position: relative;
    cursor: pointer;
    margin: 0 30px;
    
    font-family: 'Montserrat', sans-serif;
    font-weight: 600;
    letter-spacing: 1px;
    border: none;
    padding: 14px 32px;
    padding-bottom: 5px;
    background: wheat;
    color: #544d4d;
    font-size: 20px;
    text-transform: uppercase;    
  }
  
  .btn:before {
    content: "";
    position: absolute;
    width: 30px;
    height: 30px;
    top: -10px;
    left: -10px;
    border-top: 3px solid #31cbf5;
    border-left: 3px solid #3bc5f3;
    transition: all 0.5s;
  }
  
  .btn:after {
    content: "";
    position: absolute;
    width: 30px;
    height: 30px;
    bottom: -10px;
    right: -10px;
    border-bottom: 3px solid #31cbf5;
    border-right: 3px solid #31cbf5;
    transition: all 0.5s; 
  }

  .btn:hover:before,
  .btn:hover:after {
    height: 100%;
    width: 100%;
  }

* .fan-container {
            position: absolute;
            left: 0;
            width: 100%;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            background: none; /* Ensure the background doesn't overwrite the main background */
            
        }

        .fan {
            position: relative;
            bottom: 500px;
            width: 150px;
            height: 150px;
            border-radius: 50%;
            background: #ddd;
            display: flex;
            justify-content: center;
            align-items: center;
            transform-style: preserve-3d;
            animation: spin 2s linear infinite;
        }

        .fan:after {
            content: '';
            position: absolute;
            width: 100px;
            height: 100px;
            background: #fff;
            border-radius: 50%;
            border: 15px double blueviolet;
            box-shadow: 0 2px 20px rgba(0, 0, 0, 0.5);
        }

        .blade {
            position: absolute;
            width: 200px;
            height: 100px;
            background: #3a92af;
            border-radius: 50px;
            transform-origin: 50% 50%;
            box-shadow: 0 2px 20px rgba(0, 0, 0, 0.5);
        }

        .blade:nth-child(1) {
            transform: rotate(0deg) translate(150px) rotate(0deg);
        }

        .blade:nth-child(2) {
            transform: rotate(120deg) translate(150px) rotate(0deg);
        }

        .blade:nth-child(3) {
            transform: rotate(240deg) translate(150px) rotate(0deg);
        }

        input[type="checkbox"] {
            position: absolute;
            bottom: 50px;
            width: 40px;
            height: 40px;
        }

        input[type="checkbox"]+.fan {
            animation-play-state: running;
        }

        input[type="checkbox"]:checked+.fan {
            animation-play-state: paused;
        }

        @keyframes spin {
            100% {
                transform: rotate(360deg);
            }
        }
